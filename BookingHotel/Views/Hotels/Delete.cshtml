@model BookingHotel.Models.Entities.Hotel

@{
    ViewData["Title"] = "Delete Hotel";
}

<h2 class="mb-4">Delete Hotel</h2>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this hotel?</strong>
</div>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Location</dt>
    <dd class="col-sm-10">@Model.Location</dd>

    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>

    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            <img src="@Model.ImageUrl" alt="Hotel Image" class="img-thumbnail" style="max-height:200px;" />
        </dd>
    }
</dl>

<form asp-action="DeleteConfirmed" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
