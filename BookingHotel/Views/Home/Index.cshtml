@{
    ViewData["Title"] = "Welcome to Booking Hotel";
}

<!-- Hero Section -->
<section class="hero bg-dark text-white text-center py-5" style="background: url('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTpShq6YkE1bn0P2VBRU7KuRoVG2GlKkwqXk0-1zmK7vpDH2tRJchnPSfs&s') no-repeat fixed cover; ">
    <div class="container">
        <h1 class="display-4 fw-bold">Find Your Perfect Stay</h1>
        <p class="lead">Book top-rated hotels with ease and confidence.</p>
        <a href="/Hotels/Index" class="btn btn-primary btn-lg mt-3">Browse Hotels</a>
    </div>
</section>

<!-- Features Section -->
<section class="features py-5 bg-light">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <i class="bi bi-globe2 fs-1 text-primary"></i>
                <h4 class="fw-bold mt-3">Global Reach</h4>
                <p>Hotels available in various cities and destinations worldwide.</p>
            </div>
            <div class="col-md-4 mb-4">
                <i class="bi bi-lock fs-1 text-primary"></i>
                <h4 class="fw-bold mt-3">Secure Booking</h4>
                <p>Your booking and payment details are safe and encrypted.</p>
            </div>
            <div class="col-md-4 mb-4">
                <i class="bi bi-star fs-1 text-primary"></i>
                <h4 class="fw-bold mt-3">Top Rated Hotels</h4>
                <p>Browse only the best-reviewed and top-rated hotels.</p>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta py-5 text-white text-center" style="background-color:darkslategray">
    <div class="container">
        <h2 class="fw-bold">Ready to Book Your Stay?</h2>
        <p class="lead">Sign in to access personalized deals and faster booking.</p>
        <a href="/Account/Login" class="btn btn-light btn-lg">Login Now</a>
    </div>
</section>
